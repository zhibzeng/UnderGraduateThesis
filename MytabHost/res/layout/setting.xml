<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:id="@+id/settintId">
 
      <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="#00B2EE"
			>
            <TextView 
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:text="设置"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:background="#EBEBEB"
             android:orientation="vertical" >
            
             <LinearLayout
             android:layout_marginTop="20dp"
             android:layout_width="fill_parent"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_height="81dp"
             android:background="@drawable/normal_shape"
             android:layout_gravity="center"
             android:orientation="vertical" >
             <FrameLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		              >

		             <Button
		                 android:id="@+id/chear"
		                 android:layout_width="fill_parent"
		                 android:layout_height="32dp"
		                 android:layout_gravity="center_vertical"
		                 android:layout_marginLeft="35dp"
		                 android:background="@drawable/click_selectot"
		                 android:gravity="left"
		                 android:layout_marginTop="4dp"
		                 android:text="清除记录"
		                 android:textColor="#80000000"
		                 android:textSize="16sp" />

             	    <ImageView 
             	        android:layout_width="40dp"
		             	android:layout_height="40dp"
		             	android:src="@drawable/clear"
		             	android:padding="10dp"
		             	android:layout_gravity="left"
		             	android:contentDescription="@string/hello_world"
             	        />
                 	</FrameLayout>
                 	<LinearLayout 
                 	    android:layout_width="fill_parent"
                 	    android:layout_height="1dp"
                 	    android:background="#EBEBEB"
                 	    ></LinearLayout>
                 	<FrameLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		             android:orientation="horizontal" >

		            <Button
		                android:id="@+id/update"
		                android:layout_width="fill_parent"
		                android:layout_height="32dp"
		                android:layout_gravity="center_vertical"
		                android:layout_marginLeft="35dp"
		                android:background="@drawable/click_selectot"
		               android:layout_marginTop="4dp"
		                android:gravity="left"
		                android:text="检查更新"
		                android:textColor="#80000000"
		                android:textSize="16sp" />

             	    <ImageView 
             	        android:layout_width="40dp"
		             	android:layout_height="40dp"
		             	android:src="@drawable/uodate"
		             	android:padding="10dp"
		             	android:layout_gravity="left"
		             	android:contentDescription="@string/hello_world"
             	        />
                 	</FrameLayout>
             </LinearLayout>
               <LinearLayout
             android:layout_marginTop="20dp"
             android:layout_width="fill_parent"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_height="122dp"
             android:background="@drawable/normal_shape"
             android:layout_gravity="center"
             android:orientation="vertical" >
                 	<!--
             <FrameLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		              >

		             <Button
		                 android:id="@+id/haoping"
		                 android:layout_width="fill_parent"
		                 android:layout_height="32dp"
		                 android:layout_gravity="center_vertical"
		                 android:layout_marginTop="4dp"
		                 android:layout_marginLeft="35dp"
		                 android:background="@drawable/click_selectot"
		                 android:gravity="left"
		                 android:text="亲 给个好评！"
		                 android:textColor="#80000000"
		                 android:textSize="16sp" />

             	    <ImageView 
             	        android:layout_width="40dp"
		             	android:layout_height="40dp"
		             	android:src="@drawable/qin"
		             	android:padding="10dp"
		             	android:layout_gravity="left"
		             	android:contentDescription="@string/hello_world"
             	        />
                 	</FrameLayout>
                 	
                 	<LinearLayout 
                 	    android:layout_width="fill_parent"
                 	    android:layout_height="1dp"
                 	    android:background="#EBEBEB"
                 	    ></LinearLayout>
                 -->	
                 	<FrameLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		             android:orientation="horizontal" >

		            <Button
		                android:id="@+id/declare"
		                android:layout_width="fill_parent"
		                android:layout_height="32dp"
		                android:layout_gravity="center_vertical"
		                android:layout_marginLeft="35dp"
		                android:background="@drawable/click_selectot"
		                android:gravity="left"
		                android:text="免责声明"
		                android:layout_marginTop="4dp"
		                android:textColor="#80000000"
		                android:textSize="16sp" />

             	    <ImageView 
             	        android:layout_width="40dp"
		             	android:layout_height="40dp"
		             	android:src="@drawable/mize"
		             	android:padding="10dp"
		             	android:layout_gravity="left"
		             	android:contentDescription="@string/hello_world"
             	        />
                 	</FrameLayout>
                 	
                 	<LinearLayout 
                 	    android:layout_width="fill_parent"
                 	    android:layout_height="1dp"
                 	    android:background="#EBEBEB"
                 	    ></LinearLayout>
                 	
                 	 <FrameLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		              >

		             <Button
		                 android:id="@+id/help"
		                 android:layout_width="fill_parent"
		                 android:layout_height="32dp"
		                 android:layout_gravity="center_vertical"
		                 android:layout_marginLeft="35dp"
		                 android:layout_marginTop="4dp"
		                 android:background="@drawable/click_selectot"
		                 android:gravity="left"
		                 android:text="帮助"
		                 android:textColor="#80000000"
		                 android:textSize="16sp" />

             	    <ImageView 
             	        android:layout_width="40dp"
		             	android:layout_height="40dp"
		             	android:src="@drawable/help"
		             	android:padding="10dp"
		             	android:layout_gravity="left"
		             	android:contentDescription="@string/hello_world"
             	        />
                 	</FrameLayout>
                 	<LinearLayout 
                 	    android:layout_width="fill_parent"
                 	    android:layout_height="1dp"
                 	    android:background="#EBEBEB"
                 	    ></LinearLayout>
                 	<FrameLayout
		             android:layout_width="fill_parent"
		             android:layout_height="wrap_content"
		             android:orientation="horizontal" >
		            <Button
		                 android:id="@+id/about"
		                 android:layout_width="fill_parent"
		                 android:layout_height="match_parent"
		                 android:layout_gravity="center_vertical"
		                 android:layout_marginTop="1dp"
		                 android:gravity="left"
		                 android:background="@drawable/click_selectot"
		                 android:text="关于"
		                 android:layout_marginLeft="35dp"
		                 android:textColor="#80000000"
		                 android:textSize="16sp" />
             	    <ImageView 
             	        android:layout_width="40dp"
		             	android:layout_height="40dp"
		             	android:src="@drawable/about"
		             	android:padding="10dp"
		             	android:layout_gravity="left"
		             	android:contentDescription="@string/app_name"
             	        />
                 	</FrameLayout>
             </LinearLayout>
             
          <LinearLayout
             android:layout_marginTop="20dp"
             android:layout_width="fill_parent"
             android:layout_marginLeft="15dp"
             android:layout_marginRight="15dp"
             android:layout_height="wrap_content"
             android:background="@drawable/normal_shape"
             android:layout_gravity="center"
             android:orientation="vertical" >

		            <Button
		                android:id="@+id/Settingexit"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:background="#ff0000"
		                android:text="退出"
		                android:textColor="#ffffff"
		                android:textSize="15sp" />
             </LinearLayout>
                 	
	</LinearLayout>
</LinearLayout>