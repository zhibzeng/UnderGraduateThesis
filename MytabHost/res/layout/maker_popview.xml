<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:background="@drawable/maker_pop_dialog" 
 android:layout_width="400px" 
 android:layout_height="410px"
 android:paddingBottom="35px"
 android:gravity="center_horizontal"
   >
   <ScrollView 
    android:layout_width="380px"
    android:layout_height="380px"
    >
    <LinearLayout 
        android:layout_height="380px"
        android:layout_width="380px"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
    <TextView android:id="@+id/marker_pop_date" 
       android:layout_width="350px" 
       android:layout_height="wrap_content"
       android:text="2014/4/3 14:16:33"
       android:textColor="@color/black"
         /> 
       
    <ImageView 
        android:id="@+id/marker_pop_image"
        android:layout_marginTop="10dip"
        android:layout_width="350px"
        android:layout_height="350px"
        android:src="@drawable/b1_1"
        android:layout_centerInParent="true"
        />
    </LinearLayout>
    </ScrollView>

       
    
</LinearLayout>